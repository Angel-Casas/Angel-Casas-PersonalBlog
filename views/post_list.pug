extends layout

block content
  header
    h2.color= title
  ul.preview-ul
    each post in post_list
      li.preview-li.border-bottom
        article.post-preview
          a(href=post.url)
            h4 #{post.title}
            time.post-date(date-time=post.date) #{post.post_time_formatted}
          .entry-small
            .entry-tags
              each tag in post.tags
                a(href='/posts/find/' + tag)= tag.toString().replace('_', ' ')
              else
                | *
          p.preview= post.preview
    else
      li There are no posts.    
  // End of preview-ul
